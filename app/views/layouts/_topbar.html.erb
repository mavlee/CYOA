<div id="header" class="row">
  <div class="span4">
    <a href=<%= root_path %>>
      <%= image_tag("logo.png", :size => "175x100", :alt => "Branch it out") %>
    </a>
  </div>
  <div class="span8">
    <h2 class="tagLine">Your Path. Your choice.</h2>
  </div>
  <div class="span4">
    <% if signed_in? %>
      <div class="user-status-container">
        <span>
          <a class="btn primary loginButton" href="<%= sign_out_path %>">Logout</a>
          Welcome <strong><%= current_user.username %></strong>
        </span>
      </div>
    <% else %>
      <div class="user-status-container">
        <span>
          <a class="btn primary loginButton" href="<%= sign_in_path %>">Login</a>
          Welcome <strong>Guest</strong>
        </span>
      </div>
    <% end %>
  </div>
</div>
