<!DOCTYPE html>
<html>
  <head>
    <title><%= setTitleBasedOnPage %></title>
    <%= stylesheet_link_tag   "application" %>
    <%= csrf_meta_tags %>

    <script type="text/javascript">
      window.BranchItOut = {};
    </script>
  </head>

  <body>

    <!--<%= render 'layouts/topbar' %>-->

    <div class="container">

      <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
      </section>

      <%= yield %>

      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
